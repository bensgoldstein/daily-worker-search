# Newspaper RAG Configuration
# Copy this file to .env and fill in your values

# Vector Database Configuration
VECTOR_DB_PROVIDER=pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=newspaper-rag

# OpenAI Configuration (for response generation)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (for metadata storage)
# For cloud deployment, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/database
# For local testing:
DATABASE_URL=sqlite:///newspaper_metadata.db

# Logging
LOG_LEVEL=INFO